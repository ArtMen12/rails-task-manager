<div class="container text-left mt-3">
<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <ul>
    <% if task.completed %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>

     <%#= check_box_tag(name ='fait ?', checked = task.completed ) %>
    <%= link_to task.title,task_path(task.id)  %>
  </ul>
<% end %>

<%= link_to "Ajouter une nouvelle task", tasks_new_path %>
</div>
