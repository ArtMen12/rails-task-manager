<div class="container w-25 mt-5">
  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
      <%= f.check_box :completed %>
    </div>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
